      +activitiesKind('assets/img/activities/4.jpg','Развитие талантов')
      +activitiesKind('assets/img/activities/4.jpg','Развитие талантов')
      +activitiesKind('assets/img/activities/4.jpg','Развитие талантов')
      +activitiesKind('assets/img/activities/4.jpg','Развитие талантов')
      +activitiesKind('assets/img/activities/4.jpg','Развитие талантов')
      +activitiesKind('assets/img/activities/4.jpg','Развитие талантов')
      +activitiesKind('assets/img/activities/4.jpg','Развитие талантов')
